{
  "name": "know-your-language",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:prod": "node dist/src/main",
    "start:dev": "NODE_ENV=dev nest start --watch",
    "start:debug": "NODE_ENV=dev nest start --debug --watch",
    "docker:build": "docker build -t uillian/know-your-language:prod .",
    "docker:push": "docker push uillian/know-your-language:prod",
    "k8s:create": "kubectl create -f ./k8s/",
    "k8s:delete": "kubectl delete -f ./k8s/",
    "k8s:apply": "kubectl apply -f ./k8s/",
    "k8s:delete:service": "kubectl delete -f ./k8s/service.yml",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "node -r dotenv -r ts-node/register -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "db:start": "docker compose -f docker-compose.db.local.yml up",
    "db:stop": "docker compose -f docker-compose.db.local.yml down",
    "db:mig:gen": "npm run typeorm migration:generate -- -d data-source.local.ts",
    "db:mig:run": "npm run typeorm migration:run -- -d data-source.local.ts",
    "db:mig:cr": "npm run typeorm migration:create",
    "db:create": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-extension/dist/cli/index.js db:create -d data-source.local.ts",
    "db:drop": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-extension/dist/cli/index.js db:drop -d data-source.local.ts",
    "db:seed": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-extension/dist/cli/index.js seed -d data-source.local.ts"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/cqrs": "^9.0.3",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/typeorm": "^9.0.1",
    "@types/bcryptjs": "^2.4.2",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.3",
    "express-session": "^1.17.3",
    "google-auth-library": "^8.8.0",
    "JSONStream": "^1.3.5",
    "luxon": "^3.3.0",
    "openai": "^3.2.1",
    "passport": "^0.6.0",
    "passport-apple": "^2.0.2",
    "passport-google-oauth20": "^2.0.0",
    "passport-google-token": "^0.1.2",
    "passport-jwt": "^4.0.1",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.16",
    "typeorm-extension": "^2.8.0",
    "words-pt": "^1.0.21"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.7",
    "@types/jest": "29.5.0",
    "@types/luxon": "^3.3.0",
    "@types/node": "18.15.11",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.5.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
